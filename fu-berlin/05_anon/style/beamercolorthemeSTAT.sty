\setbeamercolor*{normal text}{fg=zhawdarkblue}
\setbeamercolor*{alerted text}{fg=zhawdarkblue}
\setbeamercolor*{example text}{fg=zhawdarkblue}

\setbeamercolor*{structure}{fg=zhawdarkblue}
\setbeamercolor*{titlelike}{fg=zhawdarkblue}

\setbeamercolor{palette primary}{use=structure,fg=zhawdarkblue}
\setbeamercolor{palette secondary}{use=structure,fg=zhawdarkblue}
\setbeamercolor{palette tertiary}{use=structure,fg=zhawdarkblue}
\setbeamercolor{palette quaternary}{use=structure,fg=zhawdarkblue}

\setbeamercolor{palette sidebar primary}{use=normal text,fg=zhawdarkblue}
\setbeamercolor{palette sidebar secondary}{use=structure,fg=zhawdarkblue}
\setbeamercolor{palette sidebar tertiary}{use=normal text,fg=zhawdarkblue}
\setbeamercolor{palette sidebar quaternary}{use=structure,fg=zhawdarkblue}

% Header-Bereich
\setbeamercolor*{frametitle}{use=headline,fg=zhawdarkblue,bg=white}

\setbeamercolor*{palette tertiary}{bg=zhawdarkblue}
\setbeamercolor{frametitle}{fg=zhawdarkblue,bg=zhawlightblue!40}

% Sidebar
\setbeamercolor*{sidebar}{bg=white}

% untere und obere trennlinien
\setbeamercolor*{upper separation line foot}{fg=STATlightblue3}
\setbeamercolor*{foot pagenumber}{fg=white}
\setbeamercolor*{author date institut}{fg=zhawdarkblue}
\setbeamercolor*{lower separation line head}{fg=STATlightblue3}

\setbeamercolor{section in toc}{fg=zhawdarkblue}
\setbeamercolor{subsection in toc}{fg=zhawlightblue}

\mode<all>
